menu "ADS1115"
    depends on (ANEMOMETER_TYPE_ADS1115 || WIND_VANE_TYPE_ADS1115)

    choice ADS1115_I2C_ADDRESS
        prompt "I2C address"
        default ADS1115_I2C_ADDRESS_ADDR_TO_GND

        config ADS1115_I2C_ADDRESS_ADDR_TO_GND
            bool "0x48"
        config ADS1115_I2C_ADDRESS_ADDR_TO_VDD
            bool "0x49"
        config ADS1115_I2C_ADDRESS_ADDR_TO_SDA
            bool "0x4A"
        config ADS1115_I2C_ADDRESS_ADDR_TO_SCL
            bool "0x4B"
    endchoice

